<div id="content_detail" class="ui-corner-all">
<h1 class="title"><%= t('activerecord.attributes.search.classification_search') -%></h1>
<div id="content_list">

<table> 
  <% @sub_category.upto(@max) do |index| %>
    <tr>
      <% if index % 10 == 0 %>
        <th>
      <% else %>
        <td>
      <% end %>

        <% if @detail_categories[index] %>
          <%= link_to "#{@detail_categories[index].classification_identifier} #{@detail_categories[index].category}", page_advanced_search_path(:classifications => @search_param[index]) %>
        <% else %>
          <%= link_to sprintf("%03d",index), page_advanced_search_path(:classifications => @search_param[index]) %>
        <% end %>

      <% if index % 10 == 0 %>
        </th>
      <% else %>
        </td>
      <% end %>
    </tr>
  <% end %>
</table> 

</div>
</div>
