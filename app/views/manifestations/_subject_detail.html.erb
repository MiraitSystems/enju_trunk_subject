<tr>
  <td><%= t('activerecord.models.subject') -%>:</td>
  <td>
    <%- if manifestation.subjects.exists? -%>
      <ul>
        <%- manifestation.subjects.each do |subject| -%>
          <li>
            <%= link_to subject.term, manifestations_path(:query => "subject_sm:#{subject.term}") -%>
          </li>
        <%- end -%>
      </ul>
    <%- end -%>
  </td>
</tr>
